{% extends 'base.html.twig' %}

{% block body %}
  <main class="bg-gray-50 flex justify-center items-center min-h-screen">
    {{ form_start(form, {attr: {class: 'p-3 pb-10 w-11/12 md:w-1/2 bg-white shadow-lg rounded-md'}}) }}
    
    {% if last_error %}
      <div class="alert alert-danger mb-5">{{ last_error.messageKey|trans(last_error.messageData, 'security') }}</div>
    {% endif %}
    
    {{ form_row(form.username) }}
    {{ form_row(form.password) }}
    {{ form_widget(form._csrf_token, {attr: {value: csrf_token('authenticate')}}) }}
    
    <button type="submit" class="btn btn-primary mt-10 w-full md:w-auto">
      Se connecter
    </button>
    
    {{ form_end(form) }}
  </main>
{% endblock %}
